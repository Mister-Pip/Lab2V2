<Window x:Class="Neirogoroscop.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Neirogoroscop"
        mc:Ignorable="d"
        Title="About" Height="250" Width="450">
    <Grid>
        <Border MinWidth="350" Margin="20,0,20,0" Background="White" VerticalAlignment="Center" Padding="30" CornerRadius="20" Height="180">
            <Border.Effect>
                <DropShadowEffect BlurRadius="25" Color="Black" ShadowDepth="0"/>
            </Border.Effect>
            <Button Content="Ok" FontSize="13" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,85,0,0" Click="Button_Click"/>
        </Border>
        <TextBlock TextWrapping="Wrap" Text="Гороскопы, сгенерированные нейросетью GPT-2, обученной на текстах Виктора Пелевина и Владимира Сорокина. Обновление гороскопа происходит ежедневно в 9:00 по Мск." HorizontalAlignment="Center" Margin="0,40,0,0" VerticalAlignment="Top" Width="300"/>

    </Grid>
</Window>
